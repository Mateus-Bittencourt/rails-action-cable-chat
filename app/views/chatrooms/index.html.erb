<div class="container mt-5">


  <div id="Chatrooms">
    <div class="row">
      <% @chatrooms.each do |chatroom| %>
          <div class="card card-room">
        <%= link_to(chatroom) do %>
            <div class="card-body">
              <%= render chatroom %>
            </div>
        <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Nova sala", new_chatroom_path, class: 'btn btn-outline-dark btn-new-room' %>
</div>
